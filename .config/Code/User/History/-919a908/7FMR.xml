<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_cron_reverse_entry" model="ir.cron">
        <field name="name">Account; Reverse entries</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_account_move"/>
        <field name="code">model._run_reverses_entries()</field>
        <field name="state">code</field>
    </record>
</odoo>

<!-- model.name cron -->
<record id="model_name_ir_cron" forcecreate="True" model="ir.cron">
    <field name="name">model.name.ir.cron</field>
    <field name="user_id" ref="base.user_root"/>
    <field name="doall" eval="False"/>
    <field name="active" eval="True"/>
    <field name="interval_number">1</field>
    <field name="interval_type">minutes</field>
    <field name="numbercall">-1</field>
    <field name="model_id" ref="model_model_name"/>
    <field name="state">code</field>
    <field name="code">model.method_name()</field>
</record>