<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ht_our_blog" model="ir.ui.view">
        <field name="name">ht.our.blog</field>
        <field name="inherit_id" ref="website_blog.blog_post_short"/>
        <field name="arch" type="xml">
            <xpath expr="//section[hasclass('mb0')]" position="replace">
                <section class="page-banner bgs-cover overlay pt-50" style="background-image: url('/jt_corporate2201_theme/static/src/images/banner.jpg');">
                    <div class="container">
                        <div class="banner-inner">
                            <h1 class="page-title" t-if="blog.name">
                                <t t-esc="blog.name"/>
                            </h1>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item">
                                        <a href="/">Corporate</a>
                                    </li>
                                    <li class="breadcrumb-item active" t-if="blog.subtitle">
                                        <t t-esc="blog.subtitle"/>
                                    </li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </section>
            </xpath>
        </field>
    </record>
