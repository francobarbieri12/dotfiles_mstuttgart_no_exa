<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.account.invoice.send.email</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@id='invoicing_settings']" position="after">

                <h2>Configuração Tecnospeed para emissão de NFe e NFSe</h2>

                <div class="row mt16 o_settings_container" id="invoicing_email_settings">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="tecnospeed_token_sandbox" string="Token Tecnospeed Sandbox"/>
                            <div class="text-muted">Define o token para envio de NFe e NFSe em ambiente de sandbox (desenvolvimento)
                            </div>
                            <div class="text-muted">
                                <field name="tecnospeed_token_sandbox"/>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt16 o_settings_container" id="cancel_invoicing_email_settings">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="tecnospeed_token_producao" string="Token Tecnospeed Homologação/Produção"/>
                            <div class="text-muted">Define o token para envio de NFe e NFSe em ambiente de homologação/produção
                            </div>
                            <div class="text-muted">
                                <field name="tecnospeed_token_producao/>
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>

        </field>
    </record>
</odoo>
