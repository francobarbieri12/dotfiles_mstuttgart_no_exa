<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="login_layout" inherit_id="web.login_layout" name="Website Login Layout" priority="20">
        <xpath expr="t" position="replace">
            <t t-call="website.layout">
                <div class="oe_website_login_container" t-raw="0"/>
            </t>
        </xpath>
    </template>

    <template id="signup_page_inherit" inherit_id="login_layout">
        <xpath expr="//div[hasclass('oe_website_login_container')]" position="before">
            <section class="hero-section overlay bgs-cover pb-100" style="background-image: url('/jt_corporate2201_theme/static/src/images/hero/hero-one.jpg');background-position: top !important;">
                <div class="ht_bgc"/>
            </section>
        </xpath>
    </template>
</odoo>