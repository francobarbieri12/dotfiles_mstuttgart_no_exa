<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- invoice.electronic.event tree view -->
    <record id="invoice_electronic_event_view_tree" model="ir.ui.view">
        <field name="name">invoice.electronic.event.view.tree</field>
        <field name="model">invoice.electronic.event</field>
        <field name="arch" type="xml">
            <tree>
                <field name="state" invisible="1"/>
                <field name="code"/>
                <field name="category"/>
                <field name="name"/>
                <field name="create_date"/>
                <field name="create_uid"/>
            </tree>
        </field>
    </record>

    <!-- invoice.electronic.event form view -->
    <record id="invoice_electronic_event_view_form" model="ir.ui.view">
        <field name="name">invoice.electronic.event.view.form</field>
        <field name="model">invoice.electronic.event</field>
        <field name="arch" type="xml">
            <form string="Events">
                <sheet>
                    <group>
                        <field name="state" invisible="1"/>
                        <field name="code"/>
                        <field name="category"/>
                        <field name="name"/>
                        <field name="create_date"/>
                        <field name="create_uid"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>