<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="view_br_account_company_form" model="ir.ui.view">
        <field name="name">br_nfse_tecnospeed.res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="br_account.view_br_account_company_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='format_type']" position="after">
                <field name="tecnospeed_regime_tributacao" string="Regime de Tributação" attrs="{'required': [('nfse_engine', '=', 'tecnospeed')], 'invisible': [('nfse_engine', '!=', 'tecnospeed')]}"/>
                <field name="tecnospeed_incentivador_cultural" string="Incentivador Cultural" attrs="{'required': [('nfse_engine', '=', 'tecnospeed')], 'invisible': [('nfse_engine', '!=', 'tecnospeed')]}"/>
                <field name="tecnospeed_incentivo_fiscal" string="Incentivo Fiscal" attrs="{'required': [('nfse_engine', '=', 'tecnospeed')], 'invisible': [('nfse_engine', '!=', 'tecnospeed')]}"/>
            </xpath>

            <xpath expr="//group[@name='certificado_digital']" position="inside">
                <field name="tecnospeed_certificado_id_sandbox" readonly="1" attrs="{'required': [('nfse_engine', '=', 'tecnospeed')], 'invisible': [('nfse_engine', '!=', 'tecnospeed')]}"/>
                <field name="tecnospeed_certificado_id_producao" readonly="1" attrs="{'required': [('nfse_engine', '=', 'tecnospeed')], 'invisible': [('nfse_engine', '!=', 'tecnospeed')]}"/>
                <separator/>
                <button name="action_post_tecnospeed_certificado" type="object" string="Cadastrar Certificado" icon="fa-upload" class="oe_highlight"/>
            </xpath>

            <xpath expr="//group[@name='certificado_digital']" position="after">
                <group name="tecnospeed_settings" string="Configurações Tecnospeed">
                    <!-- <field name="nfse_engine" required="1"/> -->
                    <field name="tecnospeed_sandbox_active"/>
                    <separator/>
                    <button name="action_post_tecnospeed_company" type="object" string="Cadastrar Empresa" icon="fa-upload" class="oe_highlight"/>
                </group>
            </xpath>

        </field>
    </record>

</odoo>