<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="view_br_account_company_form" model="ir.ui.view">
        <field name="name">br_nfse_tecnospeed.res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="br_account.view_br_account_company_form"/>
        <field name="arch" type="xml">

            <xpath expr="//group[@name='certificado_digital']" position="after">
                <group name="tecnospeed_settings" string="Configurações Tecnospeed">

                    <field name="nfse_engine" required="1"/>

                    <label for="tecnospeed_certificado_id_sandbox"/>
                    <div name="tecnospeed_certificado_sandbox_div" class="o_row">
                        <field name="tecnospeed_certificado_id_sandbox" nolabel="1" readonly="1" attrs="{'required': [('nfse_engine', '=', 'tecnospeed')]}"/>
                        <button name="action_get_tecnospeed_certificado" type="object" icon="fa-refresh" class="oe_link"/>
                    </div>

                    <label for="tecnospeed_certificado_id_producao"/>
                    <div name="tecnospeed_certificado_producao_div" class="o_row">
                        <field name="tecnospeed_certificado_id_producao" nolabel="1" readonly="1" attrs="{'required': [('nfse_engine', '=', 'tecnospeed')]}"/>
                        <button name="action_get_tecnospeed_certificado" type="object" icon="fa-refresh" class="oe_link"/>
                    </div>

                    <field name="tecnospeed_sandbox_active"/>

                    <button name="action_post_tecnospeed_company" type="object" string="Cadastrar Empresa" icon="fa-refresh" class="oe_highlight"/>

                </group>
            </xpath>

        </field>
    </record>

</odoo>